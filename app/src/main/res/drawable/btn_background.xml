<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When the button is pressed, change the background color to a specific color -->
    <item android:drawable="@color/btn" android:state_pressed="true"/>
    <!-- Default state (when the button is not pressed) -->
    <item android:drawable="@color/gray"/>
</selector>
