<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Custom Material Date Picker Theme -->
    <style name="CustomMaterialDatePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">#1E88E5</item> <!-- Header and highlight color -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- Text color on selected date -->
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">500dp</item>
        <item name="materialCalendarStyle">@style/CustomCalendarStyle</item>
    </style>

    <!-- Base Calendar Style -->
    <style name="CustomCalendarStyle" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="android:textColorPrimary">#000000</item> <!-- Default text color -->
        <item name="android:textColorSecondary">#000000</item> <!-- Secondary text color -->
    </style>

    <!-- Normal Day Style -->
    <style name="CustomCalendarDay" parent="Widget.MaterialComponents.MaterialCalendar.Day">
        <item name="android:textColor">#000000</item> <!-- Text color for unselected days -->
        <item name="android:background">?attr/selectableItemBackground</item> <!-- Ripple effect -->
    </style>

    <!-- Selected Day Style -->
    <style name="CustomCalendarDaySelected" parent="Widget.MaterialComponents.MaterialCalendar.Day.Selected">
        <item name="android:textColor">#FFFFFF</item> <!-- Text color for selected days -->
        <item name="android:background">@drawable/circle_highlights</item> <!-- Custom background -->
    </style>
</resources>
