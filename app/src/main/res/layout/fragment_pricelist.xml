<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PricelistFragment">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"></FrameLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="412dp"
        android:layout_height="94dp"
        android:background="@drawable/rectanglebg"
        android:text="Pricelist"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/btn"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/regular_text"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bottom_boarder"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="Regular"
        android:layout_marginBottom="550dp"
        android:textColor="@color/btn"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_container"
        app:layout_constraintTop_toTopOf="@+id/fragment_container" />

    <TextView
        android:id="@+id/price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="550dp"
        android:paddingEnd="20dp"
        android:text="₱150"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/gel_polish_text"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="Gel Polish"
        android:layout_marginBottom="500dp"
        android:textColor="@color/btn"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_container"
        app:layout_constraintTop_toBottomOf="@+id/regular_text" />

    <TextView
        android:id="@+id/gel_polish_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="400dp"
        android:paddingEnd="20dp"
        android:text="₱300"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price_text"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/soft_gel_text"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bottom_boarder"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="Soft Gel Extension"
        android:layout_marginBottom="350dp"
        android:textColor="@color/btn"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_container"
        app:layout_constraintTop_toBottomOf="@+id/gel_polish_text" />

    <TextView
        android:id="@+id/soft_gel_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="300dp"
        android:paddingEnd="20dp"
        android:textAllCaps="false"
        android:text="Starts at ₱499"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gel_polish_price"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/removal_text"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="Removal"
        android:layout_marginBottom="200dp"
        android:textColor="@color/btn"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_container"
        app:layout_constraintTop_toBottomOf="@+id/soft_gel_text" />

    <TextView
        android:id="@+id/removal_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="150dp"
        android:paddingEnd="20dp"
        android:text="₱100"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soft_gel_price"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Add-ons Service -->
    <TextView
        android:id="@+id/add_ons_text"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:background="@drawable/bottom_boarder"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="Add-ons"
        android:layout_marginBottom="70dp"
        android:textColor="@color/btn"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_container"
        app:layout_constraintTop_toBottomOf="@+id/removal_text" />

    <TextView
        android:id="@+id/add_ons_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="0dp"
        android:paddingEnd="20dp"
        android:text="Price Vary"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/removal_price"
        app:layout_constraintBottom_toBottomOf="parent" />


    <LinearLayout
        android:id="@+id/home_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="Home"
            android:scaleType="fitCenter"
            android:src="@drawable/home_without_fill"/>

        <TextView
            android:id="@+id/home_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Pricelist Button + Text -->
    <LinearLayout
        android:id="@+id/pricelist_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintStart_toEndOf="@id/home_layout"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/btn_pricelist"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="Pricelist"
            android:scaleType="fitCenter"
            android:src="@drawable/pricelist_without_fill"/>

        <TextView
            android:id="@+id/pricelist_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pricelist"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Booking Button + Text -->
    <LinearLayout
        android:id="@+id/booking_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintStart_toEndOf="@id/pricelist_layout"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/btn_booking"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="Booking"
            android:scaleType="fitCenter"
            android:src="@drawable/booking_without_fill"/>

        <TextView
            android:id="@+id/booking_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Profile Button + Text -->
    <LinearLayout
        android:id="@+id/profile_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintStart_toEndOf="@id/booking_layout"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="Profile"
            android:scaleType="fitCenter"
            android:src="@drawable/profile_without_fill"/>

        <TextView
            android:id="@+id/profile_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:gravity="center"/>
    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

